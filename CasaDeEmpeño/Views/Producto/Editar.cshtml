@model CasaDeEmpeño.Models.Producto
@{
    ViewBag.Title = "Editar";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default" style="margin-top: 50px;">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Editar Producto</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(p => p.Id)
                            @Html.TextBoxFor(p => p.Id, new { @class = "form-control", @readonly = true })
                            @Html.ValidationMessageFor(p => p.Id, String.Empty, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(p => p.Nombre)
                            @Html.TextBoxFor(p => p.Nombre, new { @class = "form-control", placeholder = "Ingresa el nombre del producto" })
                            @Html.ValidationMessageFor(p => p.Nombre, String.Empty, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(p => p.EstadoId)
                            @Html.DropDownListFor(p => p.EstadoId, new SelectList(ViewBag.Estados, "Id", "Descripcion"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.EstadoId, String.Empty, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(p => p.FechaIngreso)
                            @Html.TextBoxFor(p => p.FechaIngreso, new { @class = "form-control", @type = "date" })
                            @Html.ValidationMessageFor(p => p.FechaIngreso, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(p => p.Valor)
                            @Html.TextBoxFor(p => p.Valor, new { @class = "form-control", placeholder = "Ingresa el valor del producto" })
                            @Html.ValidationMessageFor(p => p.Valor, String.Empty, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(p => p.TipoId)
                            @Html.DropDownListFor(p => p.TipoId, new SelectList(ViewBag.Tipos, "Id", "Descripcion"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.TipoId, String.Empty, new { @class = "text-danger" })
                        </div>
                        <input type="submit" class="btn btn-warning btn-block" value="Editar" style="margin-bottom: 10px;" />
                        @Html.ActionLink("Regresar", "Index", "Producto", new { @class = "btn btn-info btn-block" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>
