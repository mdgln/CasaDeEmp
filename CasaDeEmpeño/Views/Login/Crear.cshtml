@model CasaDeEmpeño.Models.Usuario
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Crear";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default" style="margin-top: 50px;">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Crear Usuario</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, "Usuario")
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Ingresa tu usuario" })
                            @Html.ValidationMessageFor(m => m.Username, String.Empty, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, "Contraseña")
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña" })
                            @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @class = "text-danger" })
                        </div>
                        
                        if (!string.IsNullOrEmpty(Model.MensajeError))
                        {
                            <div class="text-danger" style="margin-bottom: 15px ">
                                @Model.MensajeError
                            </div>
                        }
                        <input type="submit" class="btn btn-primary btn-block" value="Crear" />
                    }
                    <div class="form-group">
                        <a href="@Url.Action("Login", "Login")" class="btn btn-info btn-block" style="margin-top: 10px;">Regresar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
