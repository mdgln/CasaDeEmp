@model CasaDeEmpeño.Models.Devolucion
@{
    ViewBag.Title = "Ver";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default" style="margin-top: 50px;">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Ver Devolución</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(d => d.Id)
                        @Html.TextBoxFor(d => d.Id, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(d => d.Id, String.Empty, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(d => d.ProductoId)
                        @Html.DropDownListFor(m => m.ProductoId, new SelectList(ViewBag.Producto, "Id", "Nombre"), new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(d => d.ProductoId, String.Empty, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(d => d.Comentario)
                        @Html.TextBoxFor(d => d.Comentario, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(d => d.Comentario, String.Empty, new { @class = "text-danger" })
                    </div>

                    @if (!string.IsNullOrEmpty(Model.MensajeError))
                    {
                    <div class="text-danger" style="margin-bottom: 15px ">
                        @Model.MensajeError
                    </div>
                    }

                    @Html.ActionLink("Regresar", "Index", "Devolucion", new { @class = "btn btn-info btn-block" })
                </div>
            </div>
        </div>
    </div>
</div>
