@model CasaDeEmpeño.Models.TiempoVencimiento

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Tiempo</h2>

@*@if (!string.IsNullOrEmpty(TempData["Exito"] as string))
{
    <div id="mensajeTemp" class="alert alert-success">@TempData["Exito"]</div>
}*@

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default" style="margin-top: 50px;">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Editar Tiempo de Vencimiento</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.Tiempo, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Tiempo, new { @class = "form-control", @placeholder = "HH:mm:ss", @pattern = @"\d{2}:\d{2}:\d{2}" })
                            @Html.ValidationMessageFor(m => m.Tiempo, String.Empty, new { @class = "text-danger" })
                        </div>

                        <input type="submit" class="btn btn-primary btn-block" value="Editar" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>

