@model CasaDeEmpeño.Models.TipoProducto
@{
    ViewBag.Title = "Ver";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default" style="margin-top: 50px;">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Ver Tipo de Producto</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(p => p.Id)
                        @Html.TextBoxFor(p => p.Id, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(p => p.Id, String.Empty, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Descripcion)
                        @Html.TextBoxFor(p => p.Descripcion, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(p => p.Descripcion, String.Empty, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Estatus)
                        @Html.CheckBoxFor(p => p.Estatus, new { @disabled = true })
                        @Html.ValidationMessageFor(p => p.Estatus, String.Empty, new { @class = "text-danger" })
                    </div>
                    @Html.ActionLink("Regresar", "Index", "TipoProducto", new { @class = "btn btn-info btn-block" })
                </div>
            </div>
        </div>
    </div>
</div>
