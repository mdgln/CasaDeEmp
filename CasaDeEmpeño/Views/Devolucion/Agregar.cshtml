@model CasaDeEmpeño.Models.Devolucion
@{
    ViewBag.Title = "Agregar";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default" style="margin-top: 50px;">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Agregar Devolución</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group">
                            @Html.LabelFor(d => d.ProductoId)
                            @Html.DropDownListFor(m => m.ProductoId, new SelectList(ViewBag.Productos, "Id", "Nombre"), "- Selecciona uno -", new { @class = "form-control" })
                            @Html.ValidationMessageFor(d => d.ProductoId, String.Empty, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(d => d.Comentario)
                            @Html.TextBoxFor(d => d.Comentario, new { @class = "form-control", placeholder = "Agrega un comentario" })
                            @Html.ValidationMessageFor(d => d.Comentario, String.Empty, new { @class = "text-danger" })
                        </div>
                        <input type="submit" class="btn btn-success btn-block" value="Agregar" style="margin-bottom: 10px;" />
                        @Html.ActionLink("Regresar", "Index", "Devolucion", new { @class = "btn btn-info btn-block" })
                    }
                </div>
            </div>
        </div>
    </div>
</div>
